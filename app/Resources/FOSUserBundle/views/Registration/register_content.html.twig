{% trans_default_domain 'FOSUserBundle' %}
<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="margin-bottom-0">
	{{ form_macro.style_form(form) }}
	<div class="login-buttons">
		<button type="submit" class="btn btn-success btn-block btn-lg">{{ 'registration.submit'|trans }}</button>
	</div>
	<div class="m-t-20">
		<a href="{{ path('fos_user_security_login') }}">{{ 'registration.back'|trans }}</a>
	</div>
</form>